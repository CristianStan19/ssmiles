<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/rec_text_view_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/rec_text_view_appointment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/rec_text_view_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/rec_text_view_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cost"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/rec_text_view_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/rec_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel" />

    <Button
        android:id="@+id/rec_button_reschedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reschedule" />

    <Button
        android:id="@+id/rec_button_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete" />
</LinearLayout>
