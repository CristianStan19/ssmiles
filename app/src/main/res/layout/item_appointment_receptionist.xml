<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/rec_text_view_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textColor="@color/darkPurple"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rec_text_view_appointment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkPurple"
        android:text="Date"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/rec_text_view_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkPurple"
        android:text="Type"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/rec_text_view_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkPurple"
        android:text="Cost"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/rec_text_view_status"
        android:layout_width="match_parent"
        android:textColor="@color/darkPurple"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/rec_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightPurple"
            android:background="@drawable/darkprpl_rounded_bk"
            android:text="Cancel"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/rec_button_reschedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/darkprpl_rounded_bk"
            android:text="Reschedule"
            android:textColor="@color/lightPurple"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/rec_button_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rec_button_cancel"
            android:layout_marginTop="13dp"
            android:background="@drawable/darkprpl_rounded_bk"
            android:text="Complete"
            android:textColor="@color/lightPurple" />
    </RelativeLayout>
</LinearLayout>
