<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Fragments.ConsultationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pain Level"
            android:textColor="@color/darkPurple"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/rgPainLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rbHighPain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/darkPurple"
                android:textColor="@color/darkPurple"
                android:text="High" />
            <RadioButton
                android:id="@+id/rbMediumPain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/darkPurple"
                android:textColor="@color/darkPurple"
                android:text="Medium" />
            <RadioButton
                android:id="@+id/rbLowPain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkPurple"
                android:buttonTint="@color/darkPurple"
                android:text="Low" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bleeding"
            android:textColor="@color/darkPurple"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/rgBleeding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rbYesBleeding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkPurple"
                android:buttonTint="@color/darkPurple"
                android:text="Yes" />
            <RadioButton
                android:id="@+id/rbNoBleeding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkPurple"
                android:buttonTint="@color/darkPurple"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swelling"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/darkPurple"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/rgSwelling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rbYesSwelling"
                android:layout_width="wrap_content"
                android:textColor="@color/darkPurple"
                android:buttonTint="@color/darkPurple"
                android:layout_height="wrap_content"
                android:text="Yes" />
            <RadioButton
                android:id="@+id/rbNoSwelling"
                android:layout_width="wrap_content"
                android:textColor="@color/darkPurple"
                android:buttonTint="@color/darkPurple"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/lightPurple"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkPurple"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
