<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DCM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightPurple</item>
        <item name="colorPrimaryVariant">@color/darkPurple</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightPurple</item>
        <item name="colorSecondaryVariant">@color/darkPurple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkPurple</item>
        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.DCM.Button</item>
        <item name="buttonStyleSmall">@style/Widget.DCM.Button</item>
        <item name="materialButtonStyle">@style/Widget.DCM.Button</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Button style -->
    <style name="Widget.DCM.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/darkPurple</item>
        <item name="cornerRadius">16dp</item> <!-- Adjust corner radius as needed -->
    </style>
    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkPurple</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerStyle</item>
    </style>

    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/darkPurple</item>
        <item name="android:calendarTextColor">@color/darkPurple</item>
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>
